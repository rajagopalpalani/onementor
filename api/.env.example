# Local Development Environment Variables
# Copy this to .env.local and fill in your actual values

PORT=8001
NODE_ENV=development

# Disable SSL for local development
SSL=false

# Local Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_mysql_password_here
DB_NAME=onementor

# Local URLs
FRONTEND_URL=http://localhost:3000
API_BASE_URL=http://localhost:8001

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_generate_a_random_string
JWT_EXPIRES_IN=24h
SESSION_SECRET=your_session_secret_here_generate_a_random_string

# Email Configuration (for local testing)
GMAIL_USER=your_gmail@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password

# Other configurations
OTP_EXPIRES_MIN=10
useJuspay=false

# AI Configuration (optional for local)
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_MODEL=gemini-2.5-pro
GEMINI_API_KEY=your_gemini_api_key_here

# Google OAuth (for local testing)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8001/api/mentor/calendar/callback

# NextAuth (for frontend)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here_generate_a_random_string
